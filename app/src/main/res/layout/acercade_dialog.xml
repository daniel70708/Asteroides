<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/textoPrimario"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tvTituloDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/baseTituloPuntuacion.tituloDialog"
            android:text="@string/acercaDe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imgDialog"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_splash"
            android:scaleType="center"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloDialog"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/descripcionDialog"
            style="@style/baseTituloPuntuacion.texto_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/contenido_acercaDe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgDialog"
            app:layout_constraintTop_toTopOf="@+id/imgDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>