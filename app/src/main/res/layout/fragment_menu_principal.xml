<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textoPrimario"
    tools:context=".MenuPrincipalFragment">

    <TextView
        android:id="@+id/tvTituloPrincipal"
        style="@style/letraVector.tituloPrincipalGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogoAtari"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_atari"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/tvTituloPrincipal"
        app:layout_constraintEnd_toEndOf="@+id/tvTituloPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPrincipal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIniciarJuego"
        style="@style/btnMenuPrincipal.textoMedium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/jugar"
        app:icon="@drawable/ic_jugar"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoAtari" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfigurar"
        style="@style/btnMenuPrincipal.textoSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/configurar"
        app:icon="@drawable/ic_configurar"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/btnIniciarJuego"
        app:layout_constraintEnd_toEndOf="@+id/btnIniciarJuego"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarJuego" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPuntuaciones"
        style="@style/btnMenuPrincipal.textoSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/puntuaciones"
        app:icon="@drawable/ic_puntuaciones"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/btnConfigurar"
        app:layout_constraintEnd_toEndOf="@+id/btnConfigurar"
        app:layout_constraintTop_toBottomOf="@+id/btnConfigurar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAcercaDe"
        style="@style/btnMenuPrincipal.textoSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/acercaDe"
        app:icon="@drawable/ic_informacion"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/btnPuntuaciones"
        app:layout_constraintEnd_toEndOf="@+id/btnPuntuaciones"
        app:layout_constraintTop_toBottomOf="@+id/btnPuntuaciones"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSalir"
        style="@style/btnMenuPrincipal.textoMedium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/salir"
        app:icon="@drawable/ic_salir"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/btnAcercaDe"
        app:layout_constraintEnd_toEndOf="@+id/btnAcercaDe"
        app:layout_constraintTop_toBottomOf="@+id/btnAcercaDe" />

    <TextView
        android:id="@+id/tvAtari"
        style="@style/letraVector.subTituloPrincipalSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atari"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>