<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Asteroides" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grisPrimario</item>
        <item name="colorPrimaryVariant">@color/grisClaroPrimario</item>
        <item name="colorOnPrimary">@color/textoSecundario</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grisSecundario</item>
        <item name="colorSecondaryVariant">@color/grisClaroSecundario</item>
        <item name="colorOnSecondary">@color/textoPrimario</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Tema para la pantalla completa-->
    <style name="Theme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema para el splashscreen -->
    <style name="Theme.App.iniciando" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/textoPrimario</item>
        <!-- Icono de nuestro splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <!-- Tema que va a seguir cuando termine el splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Asteroides</item>
    </style>

    <!-- Estilos compartidos por la aplicación -->
    <style name="letraVector">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:textColor">@color/textoSecundario</item>
    </style>

    <!-- Estilos para la orientacion vertical -->

    <!-- Estilo para los titulos del menú principal -->
    <style name="letraVector.tituloPrincipalGrande">
        <item name="android:textSize">14pt</item>
    </style>

    <style name="letraVector.subTituloPrincipalSmall">
        <item name="android:textSize">6pt</item>
    </style>

    <!--Estilo para los botones del menú principal-->
    <style name="btnMenuPrincipal" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:textColor">@color/textoSecundario</item>
        <item name="elevation">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/textoSecundario</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/textoSecundario</item>
    </style>

    <style name="btnMenuPrincipal.textoSmall">
        <item name="android:textSize">6pt</item>
    </style>

    <style name="btnMenuPrincipal.textoMedium">
        <item name="android:textSize">8pt</item>
    </style>


    <!-- Estilos para Dialog acerca de -->
    <style name="letraVector.tituloDialog">
        <item name="android:textSize">12pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="letraVector.contenidoDialog">
        <item name="android:textSize">7pt</item>
    </style>





    <!-- Estilos para la orientacion horizontal -->

    <!-- Estilos base para el titulo y los botones -->
    <style name="tituloPrincipal">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/textoPrimario</item>
        <item name="background">@color/grisClaroPrimario</item>
    </style>


    <!--Estilo base para las puntuaciones -->
    <style name="baseTituloPuntuacion">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:textColor">@color/textoSecundario</item>
    </style>

    <!--Tamaño de letra para la puntuacion principal del juego-->
    <style name="baseTituloPuntuacion.juego">
        <item name="android:textSize">8pt</item>
    </style>

    <style name="tituloPrincipal.vertical">
        <item name="android:textSize">14pt</item>
    </style>


    <!-- Estilo para el texto del item_list-->
    <style name="baseTituloPuntuacion.texto_itemList">
        <item name="android:textSize">6pt</item>
    </style>

    <style name="baseTituloPuntuacion.texto_dialog">
        <item name="android:textSize">5pt</item>
    </style>

    <style name="baseTituloPuntuacion.tituloDialog">
        <item name="android:textSize">8pt</item>
    </style>

</resources>