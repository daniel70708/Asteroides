<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Asteroides" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grisPrimario</item>
        <item name="colorPrimaryVariant">@color/grisClaroPrimario</item>
        <item name="colorOnPrimary">@color/textoSecundario</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grisSecundario</item>
        <item name="colorSecondaryVariant">@color/grisClaroSecundario</item>
        <item name="colorOnSecondary">@color/textoPrimario</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema para el splashscreen -->
    <style name="Theme.App.iniciando" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/grisClaroPrimario</item>
        <!-- Icono de nuestro splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Tema que va a seguir cuando termine el splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Asteroides</item>
    </style>


    <!-- Estilos base para el titulo y los botones -->
    <style name="tituloPrincipal">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/textoPrimario</item>
        <item name="background">@color/grisClaroPrimario</item>
    </style>

    <style name="botonMenuPrincipal">
        <item name="fontFamily">@font/vertor</item>
        <item name="android:textColor">@color/textoPrimario</item>
        <item name="background">@color/grisClaroPrimario</item>
    </style>

    <!--Temas para el titulo y botones del menú principal en orientación vertical-->
    <style name="tituloPrincipal.vertical">
        <item name="android:textSize">14pt</item>
    </style>

    <style name="botonMenuPrincipal.vertical">
        <item name="android:textSize">7pt</item>
    </style>

    <!-- Temas para el titulo y botones del menú principal en orientación horizontal-->
    <style name="tituloPrincipal.horizontal">
        <item name="android:textSize">16pt</item>
    </style>

    <style name="botonMenuPrincipal.horizontal">
        <item name="android:textSize">8pt</item>
    </style>

</resources>